<!-- add header -->
<%- include('includes/_header') %>
<!-- end header -->

<!-- Main section -->
<main id="main" class="error-page">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>Error</h1>
                <% if (error) { %>
                    <h2><%= error.status %></h2>
                    <p><%= error.message %></p>
                <% } else { %>
                    <h2>500</h2>
                    <p>An unexpected error occurred</p>
                <% } %>
                <a href="/" class="btn btn-primary">Return Home</a>
            </div>
        </div>
    </div>
</main>
<!-- End main section -->

<!-- add footer -->
<%- include('includes/_footer') %>
<!-- end footer-->
